<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterComponent">


    <Button
        android:id="@+id/missIncrementBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="2dp"
        android:text="+"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeIncrementBtn"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/missNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="0 misses"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/makeIncrementBtn"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toEndOf="@+id/makeDecrementBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/missDecrementBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeDecrementBtn"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/makeDecrementBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/makeIncrementBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/makeNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="8dp"
        android:text="0 buckets"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/makeIncrementBtn"
        app:layout_constraintStart_toEndOf="@+id/makeDecrementBtn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>